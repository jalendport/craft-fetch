{
    "name": "jalendport/craft-fetch",
    "description": "Utilise the Guzzle HTTP client from within your Craft templates.",
    "type": "craft-plugin",
    "version": "2.0.0",
    "keywords": [
        "craft",
        "cms",
        "craftcms",
        "craft-plugin",
        "guzzle",
        "fetch"
    ],
    "support": {
        "docs": "https://github.com/jalendport/craft-fetch/blob/v1/README.md",
        "issues": "https://github.com/jalendport/craft-fetch/issues"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Jalen Davenport",
            "homepage": "https://jalendport.com"
        },
        {
            "name": "Luke Youell",
            "homepage": "https://github.com/lukeyouell"
        }
    ],
    "prefer-stable": true,
    "require": {
        "php": "^8.0.2",
        "craftcms/cms": "^4.0"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main",
        "craftcms/rector": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "jalendport\\fetch\\": "src/"
        }
    },
    "extra": {
        "name": "Fetch",
        "handle": "fetch",
        "class": "jalendport\\fetch\\Fetch"
    },
    "config": {
        "platform": {
            "php": "8.0.2"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    },
    "scripts": {
        "check-cs": "vendor/bin/ecs check src --ansi",
        "fix-cs": "vendor/bin/ecs check src --ansi --fix",
        "phpstan": "vendor/bin/phpstan analyse src",
        "rector": "vendor/bin/rector process src --config vendor/craftcms/rector/sets/craft-cms-40.php"
    }
}
